#ifndef GULO_SEQIO
#define GULO_SEQIO
                                                                               
#include "fasta.h"
#include "genbank.h"
#include "phylip.h"

namespace Gulo
{
	SequenceSource * openSequenceSource(const char * fileName)
    {
        if (FastaSequenceSource::isValidFile(fileName))
            return new FastaSequenceSource(fileName);
        else if (GenbankSequenceSource::isValidFile(fileName)) 
            return new GenbankSequenceSource(fileName);
        else if (PhylipSequenceSource::isValidFile(fileName))
            return new PhylipSequenceSource(fileName);
        return 0;
    }

	void closeSequenceSource(SequenceSource * src)
    {
        if (src != 0)
            delete src; 
        src = 0;
    }
}

#endif // GULO_SEQIO